{
  "source": [
    "src/style-dictionary/variables/**/*.json"
  ],
  "platforms": {
    "scss": {
      "transformGroup": "sass",
      "buildPath": "src/",
      "files": [{
          "format": "sass",
          "destination": "sass/_variables/_style-dictionary.scss"
        }]
    },
    "js": {
      "transformGroup": "js",
      "buildPath": "src/",
      "files": [{
          "format": "json/flat",
          "destination": "js/style-dictionary.json"
        }] 
    },
    "yaml": {
      "transformGroup": "yaml",
      "buildPath": "src/",
      "files": [{
          "format": "yaml",
          "destination": "sass/_variables/_style-dictionary.scss"
        }]
    }
  }
}